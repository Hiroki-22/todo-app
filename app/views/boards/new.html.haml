.container
  .new_board_title
    %h2 New Board
  = form_with(model: @board, url: boards_path, method: 'post', local:true) do |f|
    .new_board_area
      .new_board_label
        = f.label :title, 'Name'
      %div
        = f.text_field :title, class: 'text'
    .new_board_area
      .new_board_label
        = f.label :content, 'Description'
      %div
        = f.text_area :content
    .new_board_button
      = f.submit 'Submit', class: 'button'