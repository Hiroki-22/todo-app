= form_with(model: @task, url: board_tasks_path(@board), local:true) do |f|
  .container
    %h2 Brackets
    - @tasks.each do |task|
      .card
        .card_task_title
          = task.title
        .card_content
          = task.content
        .card_detail
          = image_tag task.user.avatar_image
    = link_to new_board_task_path do
      .new_card
        .new_card_title
          %p + Add new board